{
  "name": "@candlefw/whind",
  "version": "0.3.3-a",
  "description": "A Simple Tokenizer / Lexer",
  "main": "source/whind.mjs",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test.watch": "mocha ./test/test.js --watch",
    "test": "mocha -r esm ./test/test.js",
    "build": "rollup --config ./build/config/config.js",
    "build.watch": "rollup --config ./build/config/config.js --watch",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/candlefw/cfw-whind"
  },
  "keywords": [
    "lexer",
    "string",
    "tokenizer"
  ],
  "author": "Anthony Weathersby",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "esm": "^3.0.84",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "rollup": "^0.67.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  }
}
