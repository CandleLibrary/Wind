{
  "name": "@candlefw/wind",
  "version": "0.4.1-dev",
  "description": "A Simple Tokenizing Lexer",
  "main": "./build/library/wind.js",
  "types": "./build/types/wind.d.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test.watch": "cfw.test ./test/test.spec.js --watch",
    "test": "cfw.test ./test/test.spec.js",
    "build": "rollup --config ./build/config/config.js",
    "build.table": "node ./source/build_unicode_tables.node.js",
    "build.watch": "rollup --config ./build/config/config.js --watch",
    "prepublish": "tsc -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/candlefw/wind"
  },
  "keywords": [
    "lexer",
    "string",
    "tokenizer"
  ],
  "author": "Anthony Weathersby",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^1.31.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2019
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-fallthrough": [
        "error",
        {
          "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
        }
      ],
      "semi-style": [
        "error",
        "last"
      ],
      "semi": [
        "warn",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "prefer-const": "warn",
      "new-cap": [
        "error"
      ],
      "padding-line-between-statements": [
        "error",
        {
          "blankLine": "always",
          "prev": "function",
          "next": "*"
        }
      ]
    }
  }
}
